@{
    var db = Database.Open("connString");
    var selectQueryString = "select * from Recomendaciones";

}
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
     <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
