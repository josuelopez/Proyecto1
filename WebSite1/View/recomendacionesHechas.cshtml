        <img src="../Shared/images/cthulu.png" alt="Photo of Cthulu" id="pic" />
    
 
   
    <form action="" method="post">

        <div id="contact-info" class="vcard">

            <br>
              <h1 class="fn">Recomendaciones</h1>

            
   <table> 
<tr>
<th>Nombre</th>
<th>Email</th> 
<th>Telefono</th> 
<th>Comentario</th> 
</tr>
@foreach(var row in db.Query(selectQueryString))
{
<tr> 
   
<td>@row.Nombre_completo</td> 
<td>@row.Email</td> 
<td>@row.Telefonos</td> 
<td align="right">@row.Comentario</td> 
</tr> 
}
</table> 

      
