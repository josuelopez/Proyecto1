@{
    if (IsPost)
    {
        var titulo = Request["Titulo"];
        var escuela = Request["Escuela"];
        var ano_inicio = Request["ano_Inicio"];
        var ano_fin = Request["ano_Fin"];

        var insertQuery = "INSERT INTO Titulos(id_Persona,Titulo, Escuela, ano_Inicio, ano_Fin) VALUES('"+ 1 +"',' "+ titulo + "', '" + escuela + "','" + ano_inicio +"','"+ ano_fin +"')";

        var db = Database.Open("ConnString");
        db.Execute(insertQuery);
    }
  }

